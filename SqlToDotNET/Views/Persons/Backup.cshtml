@model IEnumerable<SqlToDotNET.Models.TblBackup>

@{
    ViewData["Title"] = "Backup";
}


<div class="card m-4">
    <div class="card-header">
        <h2 class="alert alert-success text-center">Backup Person List</h2>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead class="table-success">
                <tr>
                    <th>
                        @Html.DisplayNameFor(x => x.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.DateOfBirth)
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(x => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.DateOfBirth)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>