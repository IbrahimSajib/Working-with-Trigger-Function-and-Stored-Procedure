@model IEnumerable<SqlToDotNET.Models.Person>

@{
    ViewData["Title"] = "Index";
}

<div class="card m-4">
    <div class="card-header">
        <h2 class="alert alert-success text-center">Person List</h2>
        <div class="d-flex justify-content-end">
            <a asp-action="Create" class="btn btn-success"><i class="fa fa-plus"></i> Add New</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered text-center">
            <thead class="table-success">
                <tr>
                    <th>
                        @Html.DisplayNameFor(x => x.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(x => x.DateOfBirth)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(x => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(x => item.DateOfBirth)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PersonId" class="btn btn-warning btn-sm">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.PersonId" class="btn btn-info btn-sm"><i class="fa fa-eye"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.PersonId" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
