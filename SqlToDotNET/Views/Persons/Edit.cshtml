@model SqlToDotNET.Models.Person

@{
    ViewData["Title"] = "Edit";
}


<div class="card my-2 row col-lg-8 mx-auto">
    <div class="card-header">
        <h3>Update Person Data</h3>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PersonId" />
            <div class="row mb-2">
                <div class="col-2 fw-semibold">
                    <label asp-for="Name" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-2 fw-semibold">
                    <label asp-for="DateOfBirth" class="col-form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                </div>
                <div class="col-4">
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex offset-2 mt-2">
                <input type="submit" value="Save Data" class="btn btn-success btn-sm" />
            </div>

        </form>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-start">
            <a asp-action="Index" class="btn btn-link btn-sm text-decoration-none"><i class="fa fa-arrow-circle-left"></i> Back to List</a>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
